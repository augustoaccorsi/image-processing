{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "database-db",
            "image": "postgres",
            "essential": true,
            "memory": 200,
            "environment": [
                {
                    "name": "POSTGRES_PASSWORD",
                    "value": "developpassword"
                }
            ]
        },
        {
            "name": "database",
            "image": "augustoaccorsi/database-aws:latest",
            "essential": true,
            "memory": 200,
            "environment": [
                {
                    "name": "FLASK_ENV",
                    "value": "dev"
                },
                {
                    "name": "DATABASE_URI",
                    "value": "postgresql://postgres:developpassword@database-db/postgres"
                }
            ],
            "links": [
                "database-db"
            ],
            "portMappings": [
              {
                "hostPort": 5000,
                "containerPort": 5000
              }
            ]
        },
        {
            "name": "nginx",
            "image": "augustoaccorsi/nginx-aws:latest",
            "essential": true,
            "memory": 200,
            "portMappings": [
                {
                    "hostPort": 8080,
                    "containerPort": 8080
                }
            ],
            "links": [
                "database"
            ]
        }
    ]
}