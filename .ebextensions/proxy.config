container_commands:
  01_reload_nginx:
    command: "sudo service nginx reload"

files:
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 100M;
  "/etc/nginx/conf.d/customheaders.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      add_header X-HELP-DEBUG "2";